.history_title {
  display: flex;
  flex-direction: row;
  padding-top: 10px;
  padding-bottom: 10px;
  padding-left: 16px;
  padding-right: 16px;
}

.history_row_item_1 {
  flex: 1;
}

.history_row_item_2 {
  flex: 2;
}

.history_item {
  display: flex;
  flex-direction: row;
  padding-top: 10px;
