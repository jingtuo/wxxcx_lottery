/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.index-container {
  width: 100%;
  flex: 1;
}

.tab-container {
  flex-shrink: unset;
  flex-grow: unset;
  width: 100%;
  display: flex;
}

.tab-item {
  flex: 1;
}
